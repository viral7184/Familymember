<script>
           function phoneno(){
               $('#phone1,#phone2,#MOBILE1,#MOBILE2').keypress(function(e) {
                var a = [];
                var k = e.which;
                for (i = 48; i < 58; i++)
                    a.push(i);

                if (!(a.indexOf(k)>=0))
                    e.preventDefault();
            });
           }
</script>