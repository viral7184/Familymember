
@{
    ViewBag.Title = "Surname";
}


<section class="content">
    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="height:190px">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Add Surname Details </h4>
                </div>
                <div class="modal-body">
                    <!-- /.box-header -->
                    <form role="form" method="post">

                        <div class="form-group ">
                            <label>Surname<span class="error">  </span></label>
                            <input type="text" name="SURNAME" required class="form-control" placeholder="Enter Surname">
                            <!-- <span class="help-block error">* User Name Already Exist</span> -->
                        </div>
                      

                        <div class="box-footer">
                            <input type="submit" class="btn btn-success pull-right" value="Add Surname" />
                        </div>
                    </form>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="height:190px">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Edit Surname</h4>
                </div>
                <div class="modal-body">
                    <!-- /.box-header -->
                    <form role="form" method="post">
                        <!-- text input -->

                        <div class="form-group ">
                            <label>Surname<span class="error"> * </span></label>
                            <input type="text" name="SURNAME" required id="SURNAME" class="form-control" placeholder="Enter Surname">
                            <!-- <span class="help-block error">* User Name Already Exist</span> -->
                        </div>

                        
                        <div class="box-footer">
                            <input type="hidden" id="hdnid2" name="Id" />
                            <input type="submit" class="btn btn-success pull-right" value="Update Surname" />
                        </div>
                    </form>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>


    <!-- Info boxes -->
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Surname List</h3>
            <a data-toggle="modal" data-target="#myModal2" type="button" class="btn btn-primary hide_me display_all" style="float: right;">Add New Surname</a>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="fileTable" class="table table-bordered  dataTable" role="grid" aria-describedby="fileTable_info">

                <thead>
                    <tr>

                        <th>SR_No</th>
                        <th>Surname</th>
                        
                        <th class="hide_me display_all">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in ViewBag.surn)
                    {
                        <tr id="row_@item.Id">
                            <td>
                                @item.Id
                            </td>
                            <td id="surname_@item.Id">
                                @item.SURNAME
                            </td>
                            
                            <td class="hide_me display_all">
                                <a onclick="OpenDialog(@item.Id)" data-toggle="modal" data-target="#myModal1" type="button"> <i class="fa fa-edit"></i></a>
                                @*<a style="display:inline" class="hide_me" onclick="Delete(@item.Id,'del')"> &nbsp; <i class="fa fa-trash"></i> </a>*@
                            </td>

                        </tr>

                    }
                </tbody>

            </table>
        </div>
    </div>
</section>


<script>
    function OpenDialog(id) {
        var Add =
                   {
                       ID : id,
                   }

            $.ajax({
                url: '/Home/getsurname/' + id, 
                type: 'GET',

                success: function (data) {

                    $('#hdnid2').val(data.data.Id);
                    $('#SURNAME').val(data.data.SURNAME);
                  
                }
            });
        }
</script>